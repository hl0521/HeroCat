<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splitBar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|enterAlways" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View style="@style/MyStyle.SettingItem_SplitBar" />

                <TextView
                    android:id="@+id/clear_cache"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/clear_cache" />

                <View style="@style/MyStyle.SettingItem_SplitLine" />

                <TextView
                    android:id="@+id/check_new_version"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/check_new_version" />

                <View style="@style/MyStyle.SettingItem_SplitBar" />

                <TextView
                    android:id="@+id/user_feedback"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/user_feedback" />

                <View style="@style/MyStyle.SettingItem_SplitLine" />

                <TextView
                    android:id="@+id/service_terms"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/service_terms" />

                <View style="@style/MyStyle.SettingItem_SplitLine" />

                <TextView
                    android:id="@+id/privacy_policy"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/privacy_policy" />

                <View style="@style/MyStyle.SettingItem_SplitLine" />

                <TextView
                    android:id="@+id/about_herocat"
                    style="@style/MyStyle.SettingItem_Text"
                    android:background="@drawable/selector_textview"
                    android:text="@string/about_herocat" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/liufan_tech" />

    </LinearLayout>


</LinearLayout>